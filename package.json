{
  "name": "gaussian-elimination-solver",
  "version": "1.0.0",
  "description": "高斯消元法线性方程组求解器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-c": "gcc Gauss.c -o Gauss.exe",
    "postinstall": "npm run build-c",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Quantum",
  "license": "MIT",
  "devDependencies": {
    "electron": "^20.0.0",
    "electron-builder": "^23.0.0"
  },
  "build": {
    "appId": "com.gaussian.solver",
    "productName": "高斯消元法求解器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.c"
    ],
    "extraFiles": [
      {
        "from": "Gauss.exe",
        "to": "Gauss.exe"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "高斯消元法求解器",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    }
  }
}